{
    "version": "0.2.0",
    "configurations": [
        {
            // Name of the configuration that appears in the dropdown menu. In this case it is "Run GDB Test 2"
            "name": "Run GDB Test 2",


            "type": "cppdbg",    /// This is the type of debugger that you are using

            "request": "launch", // This is the type of request that you are making. In this case, you are launching
            // the debugger


            "program": "${workspaceFolder}/test2", // This is the path to the executable that you want to debug
            "args": [],

            "stopAtEntry": false, // This is set to true if you want the debugger to stop at the first line of the code
            // when you start debugging. In this case, it is set to false.


            // This is the directory that the debugger should use as the current working directory. In this case, it is
            // set to the workspace folder.
            "cwd": "${workspaceFolder}",

            // This is the external console that you want to use. In this case, it is set to false.
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Compile Test 2", // This is the task that you want to run before you start debugging. 
                                                // In this case, it is the task that compiles the code that we want 
                                                // to debug.


            "miDebuggerPath": "gdb", // since gdb is set in the path variable, we can just use "gdb" here
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}